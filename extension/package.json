{
  "name": "coding-rule-checker",
  "displayName": "Coding Rule Checker",
  "description": "A VSCode extension that performs static code analysis based on coding rules written in Markdown format",
  "version": "0.1.0",
  "publisher": "s-asao",
  "author": {
    "name": "s.asao",
    "email": "makkuro.marori@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sasao/coding-rule-checker"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "coding-rule-checker",
        "name": "coding-rule-checker",
        "description": "Reviews code based on markdown-formatted coding rules",
        "isSticky": true,
        "commands": [
          {
            "name": "reviewAll",
            "description": "Review all code in the specified file"
          },
          {
            "name": "reviewDiff",
            "description": "Review only the diff code"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "generate-icons": "node ../generate-png-icon.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "minimatch": "^10.1.1"
  }
}
